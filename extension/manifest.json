{
  "manifest_version": 3,
  "name": "ORK Visual Overhaul",
  "version": "1.14",
  "description": "A visual overhaul for ork.amtgard.com, adding modern UI/UX, animations, and dark/light mode.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://ork.amtgard.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}